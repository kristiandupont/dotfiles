// Place your settings in this file to overwrite the default settings
{
  "editor.detectIndentation": false,
  "editor.fontSize": 10.5,
  "editor.lineNumbers": "on",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,
  "files.associations": {
    "*.erb": "markdown",
    "*.mdconf": "markdown",
    "*.har": "json"
  },
  "files.insertFinalNewline": true,
  "gitlens.advanced.messages": {
    "suppressFileNotUnderSourceControlWarning": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressResultsExplorerNotice": true,
    "suppressWelcomeNotice": true
  },
  "gitlens.codeLens.enabled": false,
  "json.schemas": [
    { 
      "fileMatch": ["*.har"],
      "url": "https://raw.githubusercontent.com/jarib/har/master/schema.json"
    }
  ],
  "npm.enableScriptExplorer": true,
  "search.useIgnoreFiles": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
  "vim.enableNeovim": true,
  "vim.foldfix": true,
  "vim.neovimPath": "/usr/local/bin/nvim",
  "vim.easymotion": true,
  "vim.easymotionMarkerFontSize": "14",
  "vim.leader": "<space>",
  "vim.useCtrlKeys": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "leader",
        "m"
      ],
      "after": [],
      "commands": [
        {
          "command": "textmarker.toggleHighlight",
          "args": []
        }
      ]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
        "before": ["C-v"],
        "after": [],
        "commands": "editor.action.clipboardPasteAction"
    }
  ],
  "vim.handleKeys": {
    "<C-c>": false,
    "<C-v>": false,
    "<C-f>": false,
    "<C-x>": false,
    "<C-j>": false
  },
  "vim.useSystemClipboard": false,
  "window.openFilesInNewWindow": "off",
  "window.zoomLevel": 0,
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": false,
  "workbench.iconTheme": "vs-minimal",
  "workbench.sideBar.location": "right",
  "vim.disableExtension": false,
  "typescript.tsserver.log": "verbose",
  "gitlens.keymap": "chorded",
  "gitlens.historyExplorer.enabled": true,
  "workbench.colorTheme": "Palenight Theme",
  "breadcrumbs.enabled": true,
  "window.titleBarStyle": "custom",
  "window.restoreWindows": "none",
  "textmarker.defaultHighlightColor": "#fce00c",
  "textmarker.defaultHighlightOpacity": 1,
  "textmarker.highlightColors": [
    "#fc800c",
    "darkmagenta",
    "darkolivegreen",
    "darkslateblue",
    "darkslategray",
    "darkviolet",
    "darkblue",
    "darkturquoise",
    "darkgray",
    "darkkhaki",
    "darkorange",
    "darksalmon",
    "darkseagreen"
  ],
  "prettier.eslintIntegration": true,
  "prettier.printWidth": 120,
  "prettier.singleQuote": true,
  "diffEditor.renderSideBySide": true,
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true
}
